{% extends 'base.html.twig' %}

{% block body %}

    <h2 style="text-align:center">
        {{ stagiaire.nom ~ ' ' ~ stagiaire.prenom }}
    </h2>
    <div style="text-align:center">
        <a href="{{ path('edit_stagiaire', {'id': stagiaire.id}) }}" class="btn btn-success" role="button" aria-pressed="true">Modfifier les infos</a>
    </div>

    <img class="rounded-circle center" src="{{ stagiaire.avatar }}" width="200" alt="">
    <div style="text-align:center">
        <p>Présentation</p>
        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. 
            Duis fermentum a dui sit amet vestibulum. Quisque consequat posuere lacus, a vulputate felis viverra ut. 
            Integer in fermentum ante. Duis interdum vitae mauris dapibus posuere.
        </p>
    </div>

    <br><br>

    <h3>Sessions prévues</h3>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Intitulé</th>
                <th scope="col">Date début</th>
                <th scope="col">Date fin</th>
                <th scope="col">Plus</th>

            </tr>
        </thead>
        <tbody>
            {% for formation in stagiaire.formations %}
                <tr>
                    <td>{{ formation.intitule }}</td>
                    <td>{{ formation.dateDebut | date('d/m/Y') }}</td>
                    <td>{{ formation.dateFin | date('d/m/Y') }}</td>
                    <td><a href="{{ path('show_formation', {'id' : formation.id}) }}"><button type="button" class="btn btn-info">Détails</button></a></td>
                </tr>
            {% endfor %}  
        </tbody>
    </table>

{% endblock %}

